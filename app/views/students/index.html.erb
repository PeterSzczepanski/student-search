<header>
  <h1 class="h2">Student Search</h1>
</header>

<section class="search-form">
  <%= form_for :students, method: :get do |f| %>
    <div class="input-group input-group-lg">
      <%= label_tag :keywords, nil, class: "sr-only" %>
      <%= text_field_tag :keywords, nil,
          placeholder: "First Name, Last Name, or Both",
          class: "form-control input-lg" %>
      <span class="input-group-btn">
      <%= submit_tag "Find Students",
        class: "btn btn-primary btn-lg" %>
      </span>
    </div>
  <% end %>
</section>

<section class="search-results">
  <header>
    <h1 class="h3">Results</h1>
  </header>
  <ol class="list-group">
    <% @students.each do |student| %>
      <li class="list-group-item clearfix">
        <h3 class="pull-right">
          <small class="text-uppercase">GPA</small>
          <%= student.average_gpa %>
        </h3>
        <h2><%= student.first_name %> <%= student.last_name %></h2>
        <h4><%= mail_to student.email %></h4>
      </li>
    <% end %>
  </ol>
</section>