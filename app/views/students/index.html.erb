<article ng-app="students" ng-controller="StudentSearchController">
  <header>
    <h1 class="h2">Student Search</h1>
  </header>
  <section class="search-form">
    <form>
      <div class="input-group input-group-lg">
        <label for="keywords" class="sr-only">Keywords</label>
        <input type="text"
               name="keywords"
               class="form-control input-lg"
               placeholder="First Name, Last Name, or Both" ng-model="keywords">
        <span class="input-group-btn">
          <button class="btn btn-primary btn-lg"
                  ng-click="search(keywords)"> Find Students
          </button>
        </span>
      </div>
    </form>
    <h1 class="searchedFor" ng-if="searchedFor">
      <small>Searched for:</small> {{searchedFor}}
    </h1>
  </section>

  <section class="search-results">
    <header>
      <h1 class="h3">Results</h1>
    </header>
    <ol class="list-group">
      <li class="list-group-item clearfix" ng-repeat="student in students.students" ng-click="open('lg')">
        <h3 class="pull-right">
          <small class="text-uppercase">GPA</small>
          {{ student.average_gpa }}
        </h3>
        <h2>{{ student.first }} {{ student.last }}</h2>
        <div class="pull-right">
          <button class="btn btn-small btn-primary" ng-click="viewDetails(student)">
          View Details
        </div>
        <h4>{{ student.email }}</h4>
      </li>
    </ol>
  </section>
</article>
